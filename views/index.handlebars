<div class="container">

	<div class="row">

		<div class="col-md-12 text-center">
			<img src="/assets/img/burger.png" alt="burger">
		</div>

	<!-- end first row -->
	</div>

	<div class="row">

		<div class="col-md-12">
			<h1 class="text-center text-danger">Eat-Da-Burger</h1>
		</div>
	
	<!-- end second row -->
	</div>

	<div class="row">

		<div class="col-md-5">
			<ul>
				<h3>Burgers To Eat!</h3>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li style="list-style-type:none;" class="list-group-item list-group-item-danger text-white">
							<form action='api/burgers/{{this.id}}?_method=PUT' method='POST'>
									<input type='hidden' name='devoured' value='true'>
									<button type='submit' class="btn btn-danger float-right">EAT THIS!</button>
								</form>
							<h5>{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-2"></div>

		<div class="col-md-5">
			<h3 class="text-muted ml-5">Burgers Eaten</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li style="list-style-type:none;">
							<h5 class="list-group-item disabled">{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>

	</div>

	<br><br>

	<div class="row">

		<div class="col-md-12 text-center">
			<form class="create-update-form" action="api/burgers" method="POST">
				<div class="form-group">
					<textarea type="text" name="name" style="width: 300px;"></textarea><br>
					<button class="btn btn-outline-danger btn-lg m-3" type="submit">Submit</button>
					<h5 class="text-center">What kind of burger would you like?</h5>
				</div>
			</form>
		</div>


	</div>

</div>